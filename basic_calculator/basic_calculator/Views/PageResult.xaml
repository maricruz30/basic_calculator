<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="basic_calculator.Views.PageResult">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="El resultado es: "
                VerticalOptions="Start" 
                HorizontalOptions="Start"
                   Margin="10,10,10,10"
                   FontSize="30"
                   />

            <Label Text="{Binding Resultoperation}"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"
                   Margin="10,10,10,10"
                   FontSize="30"
                   TextColor="Orange"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>